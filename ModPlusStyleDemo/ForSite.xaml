<mps:ModPlusWindow x:Class="ModPlusStyleDemo.ForSite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mps="https://modplus.org/winfx/xaml/controls"
        mc:Ignorable="d" Height="250" Width="350">
    <mps:Card HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ModPlus" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Text="Design easily!" HorizontalAlignment="Center" FontSize="18"></TextBlock>
            <Button Content="Begin"></Button>
        </StackPanel>
    </mps:Card>
</mps:ModPlusWindow>
