<mps:ModPlusWindow 
    x:Class="ModPlusStyleDemo.NoTitleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModPlusStyleDemo"
        xmlns:mps="https://modplus.org/winfx/xaml/controls"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
    CloseByEscape="False"
    
    ShowIconOnTitleBar="False" ShowCloseButton="False"
    ShowTitleBar="False" 
        Title="NoTitleWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModPlusStyle;component/Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Button Name="Close" HorizontalAlignment="Center" VerticalAlignment="Center"
                Content="Close me" Click="Close_OnClick"></Button>

    </Grid>
</mps:ModPlusWindow>
